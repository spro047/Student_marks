<div class="form-container">
    <div class="form-header">
        <h2>Add New Student</h2>
        <p>Enroll a student into the system</p>
    </div>
    <% if (typeof error !=='undefined' ) { %>
        <div class="alert alert-error">
            <%= error %>
        </div>
        <% } %>
            <form action="/students/add" method="POST" class="main-form">
                <div class="form-row">
                    <div class="form-group flex-1">
                        <label for="name">Student Full Name</label>
                        <input type="text" id="name" name="name" required placeholder="John Doe">
                    </div>
                    <div class="form-group flex-1">
                        <label for="rollNo">Roll Number</label>
                        <input type="text" id="rollNo" name="rollNo" required placeholder="BT20CSE001">
                    </div>
                </div>
                <div class="form-actions">
                    <a href="/" class="cancel-link">Cancel</a>
                    <button type="submit" class="submit-btn">Save Student</button>
                </div>
            </form>
</div>